<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#240245"
    android:orientation="vertical"
    tools:context=".DetailActivity2">

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    </com.google.android.youtube.player.YouTubePlayerView>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/purple_500" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F8F8F8"
        android:textSize="34sp"
        tools:text="Old" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="10" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:text="A group of families on a tropical holiday discover that the secluded beach where they are staying is somehow causing them to age rapidly â€“ reducing their entire lives into a single day." />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/purple_500" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:text="Original Language:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:text="english"
        android:textColor="#FFFFFF" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/purple_500" />

    <TextView
        android:id="@+id/adult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adult movie"
        android:textColor="#FDFCFC" />

    <View
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/purple_500" />

</LinearLayout>